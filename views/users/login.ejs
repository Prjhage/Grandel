<% layout("./layouts/boilerplate") -%>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer"
    />
    <div class="login-overlay">
        <div class="login-card">
            <div class="login-header">
                <i class="fa-regular fa-house fa-bounce" style="color: #005af5; font-size: 3rem"></i>
                <h2>Welcome Back</h2>
            </div>
            <% if (error && error.length) { %>
                <div class="alert alert-danger text-center">
                    <%= error %>
                </div>
                <% } %>

                    <form id="login-form" class="login-form needs-validation" novalidate onsubmit="loginWithEmail(event)">
                        <div class="form-group">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" placeholder="Email address" required id="email" />
                        </div>

                        <div class="form-group">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" placeholder="Password" id="password" required />
                        </div>
                        <button type="submit" class="login-btn btn-success">Login</button>

                        <a href="/signup" class="forgot-link mt-3">Don't have an account? Sign Up</a>
                    </form>
        </div>
    </div>